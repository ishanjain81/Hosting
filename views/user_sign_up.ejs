<link rel="stylesheet" href="/css/user_sign_up_in.css">
<div class="form_wrapper">
    <div class="form_container">
      <div class="title_container">
        <h2>Sign Up Yourself</h2>
      </div>
      <div class="row clearfix">
        <div class="">
          <form action="/users/create" method="POST">
            <div class="input_field"> <span><span><i aria-hidden="true" class="fa fa-envelope"></i></span></span>
              <input type="email" name="email" placeholder="Email" required />
            </div>
            <div class="input_field"> <span><span><i aria-hidden="true" class="fa fa-lock"></i></span></span>
              <input type="password" name="password" placeholder="Password" required />
            </div>
            <div class="input_field"> <span><span><i aria-hidden="true" class="fa fa-lock"></i></span></span>
              <input type="password" name="confirm_password" placeholder="Re-type Password" required />
            </div>
            <div class="row clearfix">
              <div class="col_half">
                <div class="input_field"> <span><span><i aria-hidden="true" class="fa fa-user"></i></span></span>
                  <input type="text" name="first_name" placeholder="First Name" />
                </div>
              </div>
              <div class="col_half">
                <div class="input_field"> <span><span><i aria-hidden="true" class="fa fa-user"></i></span></span>
                  <input type="text" name="last_name" placeholder="Last Name" required />
                </div>
              </div>
            <input class="button" type="submit" value="Sign Up" />
          </form>
        </div>
      </div>
      <a id="google-sign" href="/users/auth/google"><button><img src="/images/google-sign-in.png" alt="Google Sign Up"></button></a>
      <div id="Sign-In-anchor">
        <p>Already have an Account? <a href="/users/sign-in">Log In</a></p>
      </div>
    </div>
  </div>